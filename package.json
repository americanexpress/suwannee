{
    "name": "@suwannee/core",
    "version": "1.0.0",
    "contributors": [
        "Andras L Ferenczi",
        "Chandrakanth Mamillapalli",
        "Tajamul fazili"
    ],
    "repository": "https://github.com/americanexpress/suwannee.git",
    "license": "Apache-2.0",
    "description": "This helps you to connect to your BAAS provider through RestAPI",
    "main": "./dist/main.js",
    "preferGlobal": true,
    "bin": {
        "suwannee": "./dist/main.js"
    },
    "workspaces": [
        "packages/*"
    ],
    "publishConfig": {
        "access": "public"
    },
    "private": true,
    "files": [
        "/dist"
    ],
    "dependencies": {
        "@hapi/joi": "^16.1.1",
        "@nestjs/common": "^6.7.2",
        "@nestjs/core": "^6.7.2",
        "@nestjs/platform-express": "^6.7.2",
        "@nestjs/swagger": "^3.1.0",
        "@nestjs/testing": "^6.7.2",
        "axios": "^0.19.0",
        "body-parser": "^1.18.3",
        "chalk": "^2.4.1",
        "class-transformer": "^0.1.9",
        "class-validator": "^0.8.5",
        "clear": "^0.1.0",
        "commander": "^2.11.0",
        "dotenv": "^7.0.0",
        "express": "^4.16.3",
        "express-winston": "^3.3.0",
        "figlet": "^1.2.1",
        "jsonwebtoken": "^8.5.1",
        "master": "^0.0.9",
        "morgan": "^1.9.1",
        "morgan-body": "^2.4.7",
        "nestjs-config": "^1.4.4",
        "react": "^16.7.0",
        "reflect-metadata": "^0.1.10",
        "rxjs": "^6.3.3",
        "swagger-ui-express": "^4.1.1",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^7.5.2",
        "@commitlint/config-conventional": "^7.5.0",
        "@types/auth0-js": "^8.11.5",
        "@types/body-parser": "^1.16.8",
        "@types/bytebuffer": "5.0.40",
        "@types/chai": "^4.1.7",
        "@types/chai-as-promised": "^7.1.0",
        "@types/dotenv": "^6.1.1",
        "@types/express": "^4.16.0",
        "@types/express-jwt": "0.0.40",
        "@types/jsonwebtoken": "^8.3.2",
        "@types/jwt-decode": "^2.2.1",
        "@types/morgan": "^1.7.37",
        "@types/supertest": "^2.0.6",
        "@types/uuid": "^3.4.5",
        "@types/winston": "^2.4.4",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "chai-files": "^1.4.0",
        "husky": "^1.3.1",
        "lerna": "^3.16.5",
        "mocha": "^5.2.0",
        "nodemon": "^1.18.9",
        "nyc": "^14.1.1",
        "prettier": "^1.14.3",
        "should": "^13.2.3",
        "sinon": "^7.3.0",
        "source-map-support": "^0.5.10",
        "supertest": "^3.3.0",
        "ts-node": "^6.2.0",
        "tsconfig-paths": "^3.6.0",
        "tslint": "^5.20.0",
        "typedoc": "^0.14.2",
        "typescript": "^3.5.1"
    },
    "scripts": {
        "lint": "node_modules/.bin/tslint -p tsconfig.json",
        "build": "tsc -p .",
        "prebuild:all": "cd ./node_modules/@suwannee/logger && yarn && yarn build",
        "build:all": "./node_modules/.bin/lerna run build --concurrency=1 --no-sort --stream",
        "install:all": "./node_modules/.bin/lerna bootstrap",
        "refresh": "rm -rf ./node_modules ./yarn.lock && yarn",
        "start": "ts-node -r tsconfig-paths/register src/main.ts",
        "test:all": "./node_modules/.bin/lerna run test --concurrency=1 --stream && yarn test",
        "test": "NODE_ENV='test'  nyc mocha  ./__test__/unit/*.spec.ts --exit",
        "test:e2e": "./node_modules/.bin/mocha  ./__test__/e2e/*.e2e-spec.ts  -c ./example.config.json --require ts-node/register --timeout 10000 --exit",
        "test:e2e:all": "./node_modules/.bin/lerna run test:e2e --concurrency=1 --stream",
        "docs": "./node_modules/.bin/typedoc --out docs --mode modules",
        "bootstrap": "./node_modules/.bin/lerna bootstrap && cd ./node_modules/fabric-inte"
    },
    "keywords": [
        "[baas",
        "suwannee",
        "blockchain",
        "RestAPI",
        "Tools",
        "BAAS",
        "Fabric",
        "connector",
        "hyperledger]"
    ],
    "nyc": {
        "include": [
            "src/**/*.ts",
            "src/**/*.tsx"
        ],
        "extension": [
            ".ts",
            ".tsx"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "text",
            "lcov",
            "html"
        ],
        "exclude": [
            "docs",
            "coverage",
            "__test__",
            "*.module.ts",
            "dist",
            "config",
            "gulpfile.js",
            "**/*.interface.ts",
            "**/*.module.ts",
            "**/*.middleware.ts",
            "**/*.filter.ts",
            "**/Loggers.ts",
            "**/App.service.ts",
            "**/app.config.ts",
            "**/IBlockchainService.ts",
            "**/main.ts",
            "**/blockchain.constants.ts"
        ],
        "per-file": false,
        "lines": 100,
        "statements": 100,
        "functions": 100,
        "branches": 85,
        "check-coverage": true,
        "all": true,
        "sourceMap": true,
        "instrument": true
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn lint",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "preparecommitmsg": "git-hooks/prepare-commit-msg ${GIT_PARAMS}"
        }
    }
}