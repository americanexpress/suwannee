{
    "name": "suwannee",
    "version": "1.0.0",
    "contributors": [
        "Andras L Ferenczi",
        "Chandrakanth Mamillapalli",
        "Tajamul fazili"
    ],
    "license": "Apache-2.0",
    "description": "This helps you to connect to your BAAS provider through RestAPI",
    "main": "./src/main.ts",
    "preferGlobal": true,
    "bin": {
        "suwannee": "./dist/main.js"
    },
    "files": [
        "/dist"
    ],
    "dependencies": {
        "@hapi/joi": "^16.1.1",
        "@nestjs/common": "^6.7.2",
        "@nestjs/core": "^6.7.2",
        "@nestjs/microservices": "^6.7.2",
        "@nestjs/platform-express": "^6.7.2",
        "@nestjs/swagger": "^3.1.0",
        "@nestjs/testing": "^6.7.2",
        "@nestjs/websockets": "^6.7.2",
        "@types/jsonwebtoken": "^8.3.2",
        "axios": "^0.19.0",
        "body-parser": "^1.18.3",
        "braid-client": "^3.3.1-20181219142722288",
        "chalk": "^2.4.1",
        "class-transformer": "^0.1.9",
        "class-validator": "^0.8.5",
        "clear": "^0.1.0",
        "commander": "^2.11.0",
        "commander-ts": "^0.1.5",
        "dotenv": "^7.0.0",
        "express": "^4.16.3",
        "express-winston": "^3.3.0",
        "fabric-integration": "https://github.com/americanexpress/fabric-integration.git",
        "figlet": "^1.2.1",
        "global": "^4.3.2",
        "jsonwebtoken": "^9.0.0",
        "master": "^0.0.9",
        "mock-stdin": "^0.3.1",
        "morgan": "^1.9.1",
        "morgan-body": "^2.4.7",
        "react": "^16.7.0",
        "reflect-metadata": "^0.1.10",
        "rxjs": "^6.3.3",
        "save": "^2.3.3",
        "swagger-ui-express": "^4.1.1",
        "winston": "^3.2.1",
        "yamljs": "^0.3.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.2.2",
        "@babel/node": "^7.2.2",
        "@babel/preset-env": "^7.2.3",
        "@babel/register": "^7.0.0",
        "@commitlint/cli": "^7.5.2",
        "@commitlint/config-conventional": "^7.5.0",
        "@types/auth0-js": "^8.11.5",
        "@types/body-parser": "^1.16.8",
        "@types/bytebuffer": "^5.0.37",
        "@types/chai": "^4.1.7",
        "@types/chai-as-promised": "^7.1.0",
        "@types/express": "^4.16.0",
        "@types/express-jwt": "0.0.40",
        "@types/express-serve-static-core": "4.16.0",
        "@types/jwt-decode": "^2.2.1",
        "@types/morgan": "^1.7.37",
        "@types/node": "^10.11.3",
        "@types/object-hash": "^1.1.0",
        "@types/supertest": "^2.0.6",
        "@types/uuid": "^3.4.5",
        "@types/winston": "^2.4.4",
        "@types/yup": "^0.24.7",
        "babel-polyfill": "^6.26.0",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "chai-files": "^1.4.0",
        "husky": "^1.3.1",
        "mocha": "^5.2.0",
        "nodemon": "^1.18.9",
        "nyc": "^13.3.0",
        "prettier": "^1.14.3",
        "should": "^13.2.3",
        "sinon": "^7.3.0",
        "source-map-support": "^0.5.10",
        "supertest": "^3.3.0",
        "ts-node": "^6.2.0",
        "tsconfig-paths": "^3.6.0",
        "tslint": "^5.20.0",
        "typedoc": "^0.14.2",
        "typescript": "^3.5.1"
    },
    "scripts": {
        "lint": "node_modules/.bin/tslint -p tsconfig.json",
        "build": "tsc -p .",
        "refresh": "rm -rf ./node_modules ./yarn.lock && yarn",
        "start": "ts-node -r tsconfig-paths/register src/main.ts",
        "test": "NODE_ENV='test' ./node_modules/.bin/nyc ./node_modules/.bin/mocha  ./__test__/unit/*.spec.ts --exit",
        "test:e2e": "./node_modules/.bin/mocha  ./__test__/e2e/*.e2e-spec.ts  -c ./example.config.json --require ts-node/register --exit",
        "docs": "./node_modules/.bin/typedoc --out docs --mode modules"
    },
    "keywords": [
        "[baas",
        "suwannee",
        "blockchain",
        "RestAPI",
        "Tools",
        "BAAS",
        "Fabric",
        "connector",
        "hyperledger]"
    ],
    "nyc": {
        "include": [
            "src/**/*.ts",
            "src/**/*.tsx"
        ],
        "extension": [
            ".ts",
            ".tsx"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "text",
            "lcov",
            "html"
        ],
        "exclude": [
            "docs",
            "coverage",
            "__test__",
            "*.module.ts",
            "dist",
            "config",
            "gulpfile.js",
            "src/main.ts",
            "src/filters",
            "src/App.service.ts",
            "src/api/Api.module.ts",
            "src/middleware/Jwt.middleware.ts",
            "src/api/services/corda/",
            "src/utils/logging/Loggers.ts"
        ],
        "per-file": false,
        "lines": 100,
        "statements": 100,
        "functions": 100,
        "branches": 85,
        "check-coverage": true,
        "all": true,
        "sourceMap": true,
        "instrument": true
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn lint",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "preparecommitmsg": "git-hooks/prepare-commit-msg ${GIT_PARAMS}"
        }
    }
}
