{
    "name": "@suwannee/iotaMam",
    "version": "1.0.0",
    "contributors": [
        "Andras L Ferenczi",
        "Chandrakanth Mamillapalli",
        "Tajamul fazili"
    ],
    "license": "Apache-2.0",
    "description": "Helps you to connect and send/receive MAM messages (IOTA) through RestAPI",
    "main": "./dist/index.js",
    "preferGlobal": true,
    "files": [
        "/dist"
    ],
    "private": true,
    "workspaces": {
        "nohoist": [
            "**/@types/bytebuffer"
        ]
    },
    "dependencies": {
        "@nestjs/common": "^6.7.2",
        "@suwannee/logger": "file:../logger",
        "@suwannee/dlt": "file:../dlt",
        "nestjs-config": "^1.4.4",
        "twizt": "https://github.com/americanexpress/twizt.git"
    },
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.2.2",
        "@babel/node": "^7.2.2",
        "@babel/preset-env": "^7.2.3",
        "@babel/register": "^7.0.0",
        "@commitlint/cli": "^7.5.2",
        "@commitlint/config-conventional": "^7.5.0",
        "@nestjs/testing": "^6.7.2",
        "@types/auth0-js": "^8.11.5",
        "@types/body-parser": "^1.16.8",
        "@types/bytebuffer": "^5.0.39",
        "@types/chai": "^4.1.7",
        "@types/chai-as-promised": "^7.1.0",
        "@types/express": "^4.16.0",
        "@types/express-jwt": "0.0.40",
        "@types/node": "^10.11.3",
        "@types/object-hash": "^1.1.0",
        "@types/uuid": "^3.4.5",
        "@types/winston": "^2.4.4",
        "@types/yup": "^0.24.7",
        "axios-mock-adapter": "^1.17.0",
        "babel-polyfill": "^6.26.0",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "chai-files": "^1.4.0",
        "husky": "^1.3.1",
        "mocha": "^5.2.0",
        "nodemon": "^1.18.9",
        "nyc": "^13.3.0",
        "prettier": "^1.14.3",
        "should": "^13.2.3",
        "sinon": "^7.3.0",
        "source-map-support": "^0.5.10",
        "supertest": "^3.3.0",
        "ts-node": "^6.2.0",
        "tsconfig-paths": "^3.6.0",
        "tslint": "^5.20.0",
        "typedoc": "^0.14.2",
        "typescript": "^3.5.1"
    },
    "scripts": {
        "lint": "./node_modules/.bin/tslint -p tsconfig.json",
        "build": "tsc -p .",
        "refresh": "rm -rf ./node_modules ./yarn.lock && yarn",
        "start": "ts-node -r tsconfig-paths/register src/main.ts",
        "test": "NODE_ENV='test' ./node_modules/.bin/nyc ./node_modules/.bin/mocha  ./__test__/**/*.spec.ts --opts ./__test__/mocha.opts",
        "test:e2e": "./node_modules/.bin/mocha  ./__test__/e2e/*.e2e-spec.ts  -c ./example.config.json --require ts-node/register --timeout 10000 --exit",
        "docs": "./node_modules/.bin/typedoc --out docs --mode modules"
    },
    "nyc": {
        "include": [
            "src/**/*.ts",
            "src/**/*.tsx"
        ],
        "extension": [
            ".ts",
            ".tsx"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "text",
            "lcov",
            "html"
        ],
        "exclude": [
            "docs",
            "coverage",
            "__test__",
            "src/*.module.ts",
            "dist",
            "config",
            "gulpfile.js",
            "src/main.ts",
            "src/index.ts",
            "src/filters",
            "src/App.service.ts",
            "src/Corda.module.ts",
            "src/middleware/Jwt.middleware.ts",
            "src/utils/logging/Loggers.ts",
            "src/common/config/interfaces"
        ],
        "per-file": false,
        "lines": 100,
        "statements": 100,
        "functions": 100,
        "branches": 85,
        "check-coverage": true,
        "all": true,
        "sourceMap": true,
        "instrument": true
    }
}
