{
    "compilerOptions": {
     "module": "commonjs",
     "declaration": true,
     "noImplicitAny": false,
     "removeComments": true,
     "noLib": false,
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "esModuleInterop": true,
     "resolveJsonModule": true,
     "lib": ["es6", "dom", "es2017"],
     "allowSyntheticDefaultImports": true,
     "target": "es2017",
     "sourceMap": true,
     "outDir": "./dist",
     "rootDir": "src",
     "typeRoots": ["node_modules/@types", "custom_typings"]
    },
    "include": ["src"],
    "exclude": ["./node_modules", "./dist"]
   }
   